<h1>Listing posts</h1>


    <% @posts.each do |post| %>
    <%= @user.nickname %>
      <h2><%= post.title %></h2>
        <%= post.content %>
       <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
       <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

