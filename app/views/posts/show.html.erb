<title> <%= @post.title %> </title>

<p id="notice"><%= notice %></p>


<p>
 <%= link_to @post.user.nickname, user_posts_path(@post.user.id) %>
</p>

<p>
  <strong><%= @post.title %></strong>
  
</p>

<p>
  <%= @post.content %>
</p>

<% if current_user == @post.user %>
<%= link_to 'Edit', edit_user_post_path(user_id: @post.user.id,  id: @post.id) %> |
<%end%>

<%= link_to "#{@c} Comments",  user_post_comments_path(@post.user.id, @post.id) %>

<%= link_to 'New Comment', new_user_post_comment_path(user_id: current_user, post_id: @post.id) %>



<%= link_to 'Back', :back %>
